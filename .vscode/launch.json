{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server (FastMCP)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.server:app",
                "--host", "0.0.0.0",
                "--port", "8080",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal"
        }
    ]
}